{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "ReverseProxy": {
        "Routes": {
            "route1": {
                "ClusterId": "customers",
                "Match": {
                    "Path": "gateaway-customers/{**catch-all}"
                    //"Hosts":  ["www.google.com"]
                },
                "Transforms": [
                    {
                        "PathPattern": "{**catch-all}"
                    }
                ]
            }
        },
        "Clusters": {
            "customers": {
                "Destinations": {
                    "destination1": {
                        "Address": "https://jsonplaceholder.typicode.com/"
                    }
                }
            }
        }
    }
}

