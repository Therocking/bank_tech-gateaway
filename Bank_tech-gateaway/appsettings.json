{
    "JwtSettings": {
        "Key": "<In secret settings>"
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "UsersProxy": { /*Users proxy config*/
        "Routes": {
            "usersRoute": {
                "ClusterId": "users",
                //"LoadBalancingPolicy": "RoundRobin",
                "Match": {
                    "Path": "gateaway-users/{**catch-all}",
                    "Methods": [ "POST" ]
                },
                "Transforms": [
                    {
                        "PathPattern": "{**catch-all}"
                    }
                ]
            }
        },
        "Clusters": {
            "users": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://localhost:5048/api/users"
                    }
                }
            }
        }
    },
    "SavingsProxy": { /*Savings proxy config*/
        "Routes": {
            "usersRoute": {
                "ClusterId": "savings",
                "AuthorizationPolicy": "RequireAuthenticatedUser",
                "Match": {
                    "Path": "gateaway-savings/{**catch-all}",
                    "Methods": [ "GET", "POST", "PUT", "PATCH" ]
                },
                "Transforms": [
                    {
                        "PathPattern": "{**catch-all}"
                    }
                ]
            }
        },
        "Clusters": {
            "savings": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://localhost:5085/api/"
                    }
                }
            }
        }
    },
