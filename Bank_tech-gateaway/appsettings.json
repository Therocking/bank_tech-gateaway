{
    "JwtSettings": {
        "Key": "<In user secrets>"
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "UsersProxy": { /*Users proxy config*/
        "Routes": {
            "usersRoute": {
                "ClusterId": "users",
                "LoadBalancingPolicy": "RoundRobin",
                "Match": {
                    "Path": "gateaway-users/{**catch-all}",
                    "Methods": [ "POST" ]
                },
                "Transforms": [
                    {
                        "PathPattern": "{**catch-all}"
                    }
                ]
            }
        },
        "Clusters": {
            "users": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://localhost:5048/api/users/"
                    },
                    "destination2": {
                        "Address": "http://localhost:5048/api/users/"
                    }
                }
            }
        }
    },
    "SavingsProxy": { /*Savings proxy config*/
        "Routes": {
            "savingsRoute": {
                "ClusterId": "savings",
                //"AuthorizationPolicy": "RequireAuthenticatedUser",
                "RateLimiterPolicy": "limitPolicy",
                "LoadBalancingPolicy": "RoundRobin",
                "Match": {
                    "Path": "gateaway-savings/{**catch-all}",
                    "Methods": [ "GET", "POST", "PUT", "PATCH" ]
                },
                "Transforms": [
                    {
                        "PathPattern": "{**catch-all}"
                    }
                ]
            }
        },
        "Clusters": {
            "savings": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://localhost:5085/api/"
                    },
                    "destination2": {
                        "Address": "http://localhost:5085/api/"
                    }
                }
            }
        }
    },
    "CustomersProxy": { /*Customers proxy config*/
        "Routes": {
            "customersRoute": {
                "ClusterId": "customers",
                //"AuthorizationPolicy": "RequireAuthenticatedUser",
                "LoadBalancingPolicy": "RoundRobin",
                "Match": {
                    "Path": "gateaway-customers/{**catch-all}",
                    "Methods": [ "GET", "PUT" ] /*,
                    "Headers": [
                        {
                            "Name": "header1",
                            "Values": [ "value1" ],
                            "Mode": "ExactHeader"
                        }
                    ]*/
                },
                "Transforms": [
                    {
                        "PathPattern": "{**catch-all}"
                    } /*,
                    {
                        "ResponseHeader": "Authorization",
                        "Append": "un token",
                        "When": "Always"
                    }*/
                ]
            },
            "postCustomerRoute": {
                "ClusterId": "customers",
                "LoadBalancingPolicy": "RoundRobin",
                "Match": {
                    "Path": "gateaway-customers/customer",
                    "Methods": [ "POST" ]
                },
                "Transforms": [
                    {
                        "PathPattern": "/customer"
                    }
                ]
            }
        },
        "Clusters": {
            "customers": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://localhost:5163/api/"
                    },
                    "destination2": {
                        "Address": "http://localhost:5163/api/"
                    }
                }
            }
        }
    },
    "CreditCardsProxy": { /*Credit cards proxy config*/
        "Routes": {
            "creaditCardsRoute": {
                "ClusterId": "creaditCard",
                //"AuthorizationPolicy": "RequireAuthenticatedUser",
                "LoadBalancingPolicy": "RoundRobin",
                "Match": {
                    "Path": "gateaway-cards/{**catch-all}",
                    "Methods": [ "GET", "POST", "PUT" ]
                },
                "Transforms": [
                    {
                        "PathPattern": "{**catch-all}"
                    }
                ]
            }
        },
        "Clusters": {
            "creaditCard": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://localhost:5036/api/"
                    },
                    "destination2": {
                        "Address": "http://localhost:5036/api/"
                    }
                }
            }
        }
    }
}
